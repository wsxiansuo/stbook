<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/bg_color"
        android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
                android:layout_height="44dp"
                >
                <ImageView android:id="@+id/iv_left_light"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_silder"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/iv_right_light"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:src="@drawable/img_silder"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <SeekBar android:id="@+id/sb_light_silder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/iv_right_light"
                    android:layout_toRightOf="@id/iv_left_light"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:max="100"/>
                
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
        />
        <RelativeLayout android:id="@+id/rl_light_system"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/str_system_text"
                />
            <CheckBox android:id="@+id/cb_light_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:clickable="false">
            </CheckBox>
        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
        />
</LinearLayout>
